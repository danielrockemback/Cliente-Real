{% extends 'base-public.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {{ pageSeo.aboutUsPageTitle }}<br>
    {{ pageSeo.aboutUsPageDescription }}<br>
    {{ generalData.address }}<br>
    {{ generalData.email }}<br>
    {{ generalData.phone }}<br>
    {{ globalTags.pixelMetaAds }}<br>
    {{ globalTags.ga4 }}<br>
    {{ urlToPostForm.url }}

    <h1>Produtos</h1>
    <ul>
        {% for product in products %}
