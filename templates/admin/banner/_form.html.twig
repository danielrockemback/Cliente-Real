{{ form_start(form) }}
<div class="row">

    <div class="mb-3 col col-12">
        <label for="{{ form.title.vars.id }}" class="form-label">Título</label>
        {{ form_widget(form.title, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-12">
        <label for="{{ form.subTitle.vars.id }}" class="form-label">Legenda</label>
        {{ form_widget(form.subTitle, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.active.vars.id }}" class="form-label">Ativo</label>
        {{ form_widget(form.active, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.position.vars.id }}" class="form-label">Posição</label>
        {{ form_widget(form.position, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.url.vars.id }}" class="form-label">URL</label>
        {{ form_widget(form.url, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.language.vars.id }}" class="form-label">Idioma</label>
        {{ form_widget(form.language, {'attr':{'class':'form-control'}}) }}
        <div id="emailHelp" class="form-text">Informe o idioma desse Banner.</div>
    </div>

    <div class="mb-3 col col-6">
        {% if banner.image %}
            <img class="mt-3" src="{{ vich_uploader_asset(banner, 'imageFile') }}" width="150px">
            <br>
            <br>
        {% endif %}
        {{ form_widget(form.imageFile) }}

    </div>

</div>


<button class="btn btn-info float-start text-white mt-3">Salvar</button>
{{ form_end(form) }}
