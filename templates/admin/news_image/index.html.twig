{% extends 'base.html.twig' %}

{% set languagesEnum = enum('LanguageEnum') %}

{% block title %}Imagens do Produto{% endblock %}

{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
    <script>

        $(document).ready(function () {
            $('#tabela').DataTable({
                "lengthMenu": [[ 10, 25, 50, 100,-1], [ 10, 25, 50, 100,"Todos"]],
                "language": {
                    "lengthMenu": "Mostrando _MENU_ registros por página",
                    "zeroRecords": "Nada encontrado",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "Nenhum registro disponível",
                    "infoFiltered": "(filtrado de _MAX_ registros no total)",
                    "search": " Pesquisar",

                    "paginate": {
                        "first": "Primeira",
                        "last": "Última",
                        "next": "Próxima",
                        "previous": "Anterior"
                    },
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.3/css/dataTables.dataTables.css" />
    <script src="https://cdn.datatables.net/2.3.3/js/dataTables.js"></script>

    <h1>{{ news.date|date('d/m/Y') }} - {{ news.title }}</h1>

    <div class="row text-end">
        <div class="col mb-3">
            <a href="{{ path('app_admin_news_image_new', {'newsId': news.id}) }}"
               type="button"
               class="btn btn-success text-white">Novo</a>
        </div>
    </div>

    <div class="card mb-5">
        <h5 class="card-header">
            Imagens da Notícia
        </h5>
        <div class="card-body">
            <table class="table" id="tabela">
                <thead>
                    <tr>
                        <th class="text-center">Imagem</th>
                        <th class="text-center">Título</th>
                        <th class="text-center">Alt</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>

                <tbody>
                {% for news_image in news_images %}
                    <tr>
                        <td class="text-center">
                            {% if news_image.imageFile %}
                                <img src="{{ vich_uploader_asset(news_image, 'imageFile') }}" width="75px">
                            {% endif %}
                        </td>
                        <td class="text-center">{{ news_image.title }}</td>
                        <td class="text-center">{{ news_image.alt }}</td>
                        <td class="text-center">
                            <a class="btn btn-primary"
                               href="{{ path('app_admin_news_image_edit', {'id': news_image.id, 'newsId': news.id}) }}">
                                Editar
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a class="btn btn-secondary" href="{{ path('app_admin_news_index') }}">Ver Notícias</a>
{% endblock %}
